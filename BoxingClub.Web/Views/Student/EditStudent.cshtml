@model BoxingClub.Web.Models.StudentFullViewModel

@{
    ViewData["Title"] = "Edit Student";
    var fromHomeController = ViewBag.fromHomeController;
    var returnId = ViewBag.returnId;
}

<div class="d-flex justify-content-between mb-2">
    <h1>Edit Student</h1>
    @if (fromHomeController)
    {
        <div class="mt-2">
            <a asp-action="DetailsGroup" asp-controller="Home" asp-route-id=@returnId class="btn btn-secondary">Back to groups List</a>
        </div>
    }
    else
    {
        <div class="mt-2">
            <a asp-action="GetAllStudents" asp-controller="Student" class="btn btn-secondary">Back to students List</a>
        </div>
    }
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStudent">
            <input asp-for="@fromHomeController" type="hidden">
            <input asp-for="@returnId" type="hidden">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label font-weight-bold"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label font-weight-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label font-weight-bold"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BornDate" class="control-label font-weight-bold"></label>
                <input asp-for="BornDate" class="form-control" />
                <span asp-validation-for="BornDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfFights" class="control-label font-weight-bold"></label>
                <input asp-for="NumberOfFights" class="form-control" />
                <span asp-validation-for="NumberOfFights" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label font-weight-bold"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label font-weight-bold"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfEntry" class="control-label font-weight-bold"></label>
                <input asp-for="DateOfEntry" class="form-control" />
                <span asp-validation-for="DateOfEntry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoxingGroupId" class="control-label font-weight-bold">Boxing Group</label>
                <div>
                    <select asp-for="BoxingGroupId" class="form-select custom-select" asp-items="ViewBag.Groups">
                        <option selected="selected" disabled="disabled">Choose group</option>
                    </select>
                </div>
                <span asp-validation-for="BoxingGroupId" class="text-danger"></span>
            </div>
            <div></div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
