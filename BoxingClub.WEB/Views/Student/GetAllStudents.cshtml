@model IEnumerable<BoxingClub.WEB.Models.StudentLiteViewModel>

@{ ViewData["Title"] = "All students"; }

<h2>All students</h2>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    @Html.ActionLink("Add Student", "CreateStudent", "Student")
}

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BornDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoxingGroup.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BornDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxingGroup.Name)
            </td>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Update", "UpdateStudent", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Details", "DetailsStudent", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteStudent", new { id = item.Id })
                </td>
            }
            else if (User.Identity.IsAuthenticated && User.IsInRole("Manager"))
            {
                <td>
                    @Html.ActionLink("Update", "UpdateStudent", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Details", "DetailsStudent", new { id = item.Id })
                </td>
            }
        </tr>
    }

</table>