@model BoxingClub.WEB.Models.StudentFullViewModel

@{
    ViewData["Title"] = "Create Student";
}

<div class="d-flex justify-content-between mb-2">
    <h1>New Student</h1>
    <div class="mt-2">
        <a asp-action="GetAllStudents" asp-controller="Student" class="btn btn-secondary">Back to students List</a>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label font-weight-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label font-weight-bold"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label font-weight-bold"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BornDate" class="control-label font-weight-bold"></label>
                <input asp-for="BornDate" class="form-control" />
                <span asp-validation-for="BornDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label font-weight-bold"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label font-weight-bold"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfEntry" class="control-label font-weight-bold"></label>
                <input asp-for="DateOfEntry" class="form-control" />
                <span asp-validation-for="DateOfEntry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoxingGroup.Id" class="control-label font-weight-bold">Boxing Group</label>
                <select asp-for="BoxingGroup.Id" class="form-select custom-select" asp-items="ViewBag.Groups">
                    <option selected="selected" disabled="disabled">Choose group</option>
                </select>
                <br />
                <span asp-validation-for="BoxingGroup.Id" class="text-danger"></span>
            </div>
            <div></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
