@model BoxingClub.WEB.Models.StudentFullViewModel

@{
    ViewData["Title"] = "Update Student";
    var fromHomeController = ViewBag.fromHomeController;
    var returnId = ViewBag.returnId;
}

<h1>Update Student</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateStudent">
            <input asp-for="@fromHomeController" type="hidden">
            <input asp-for="@returnId" type="hidden">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BornDate" class="control-label"></label>
                <input asp-for="BornDate" class="form-control" />
                <span asp-validation-for="BornDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfEntry" class="control-label"></label>
                <input asp-for="DateOfEntry" class="form-control" />
                <span asp-validation-for="DateOfEntry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoxingGroupId" class="control-label"></label>
                <select asp-for="BoxingGroupId" asp-items="ViewBag.Groups">
                    <option selected="selected" disabled="disabled">Choose group</option>
                </select>
                <span asp-validation-for="BoxingGroupId" class="text-danger"></span>
            </div>
            <div></div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (fromHomeController)
{
    <div>
        <a asp-action="DetailsGroup" asp-controller="Home" asp-route-id=@returnId>Back to groups List</a>
    </div>
}
else
{

    <div>
        <a asp-action="GetAllStudents" asp-controller="Student">Back to students List</a>
    </div>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
