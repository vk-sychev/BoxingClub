@model IEnumerable<BoxingClub.WEB.Models.BoxingGroupFullViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Boxing Groups</h1>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        <a asp-action="CreateBoxingGroup" asp-controller="Home">Create New Boxing Group</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "EditBoxingGroup", "Home", new { id = item.Id }) |
                        @Html.ActionLink("Details", "DetailsBoxingGroup", "Home", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "DeleteBoxingGroup", "Home", new { id = item.Id })
                    </td>
                }
                else if (User.Identity.IsAuthenticated && User.IsInRole("Manager"))
                {
                    <td>
                        @Html.ActionLink("Details", "DetailsBoxingGroup", "Home", new { id = item.Id })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
