@model BoxingClub.WEB.Models.BoxingGroupLiteViewModel

@{
    ViewData["Title"] = "Create Group";
}

<h1>Create Group</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoachId" class="control-label"></label>
                <select asp-for="CoachId" asp-items="ViewBag.Coaches">
                    <option selected="selected" disabled="disabled">Choose coach</option>
                </select>
                <br />
                <span asp-validation-for="CoachId" class="text-danger"></span>
            </div>
            <div></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


